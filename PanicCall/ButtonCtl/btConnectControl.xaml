		<Image x:Name="I" Source="/images/rss_orb(alt).png" Width="25" Height="25" Margin="0,-10,0,0"/>
		<TextBlock Foreground="White" FontSize="9" Text="연결"
				HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,24,0,0"/>
	</Grid>
	
</UserControl>