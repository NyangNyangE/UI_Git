<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PanicCall.InputPassword"
	x:Name="Window"
	Title="InputPassword"
	Width="250" Height="80" ShowInTaskbar="False" Background="{x:Null}" WindowStyle="None" ResizeMode="NoResize" Topmost="True" AllowsTransparency="True">

	<Grid x:Name="LayoutRoot">
	<Rectangle RadiusX="15" RadiusY="15" Fill="#FFEBEBEB"/>
	<TextBlock Margin="13,15,27,0" VerticalAlignment="Top" Height="18" Text="비밀번호를 입력 하세요!!" TextWrapping="Wrap"/>
	<PasswordBox x:Name="tbPassword" Margin="14,0,54,18" VerticalAlignment="Bottom" Height="21"/>
	<Button HorizontalAlignment="Right" Margin="0,0,11,18" Width="37" Content="확인" VerticalAlignment="Bottom" Height="21" Click="Button_Click"/>
	</Grid>
</Window>