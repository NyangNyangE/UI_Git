<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="PanicCall.Progress"
    Height="120" Width="350" mc:Ignorable="d">
	<Grid >
		<Rectangle RadiusX="20" RadiusY="20" Fill="White" />
		<Rectangle Margin="5,5,5,5" RadiusX="20" RadiusY="20" Stroke="#FF4B0000" >
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF2B0000" Offset="1"/>
					<GradientStop Color="#FFAB0000"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<TextBlock Text="Now Loading ..." FontSize="20" Margin="17,19,108,0" FontWeight="Bold" VerticalAlignment="Top" Height="29" Foreground="White"/>
		<ProgressBar Height="20"  Margin="17,0,17,29" VerticalAlignment="Bottom" IsIndeterminate="True" d:LayoutOverrides="Height" Foreground="#FF8D1515"  />
	</Grid>
</UserControl>
