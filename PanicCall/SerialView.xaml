<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PanicCall.SerialView"
	x:Name="Window"
	Title="SerialView"
	Width="640" Height="400" Icon="/PanicCall;component/Images/Twowins.ico" Loaded="loadedSerialView" Background="{x:Null}" Foreground="#99FFFFFF">

    <Grid x:Name="LayoutRoot" Height="Auto" Width="Auto" Background="White">
        <Button x:Name="start" Margin="10,10,0,0" Height="20" Width="100" Content="시작" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" Click="start_Click" />
        <Button x:Name="stop" Margin="120,10,0,0" Height="20" Width="100" Content="중지" IsEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Click="stop_Click" />
        <ScrollViewer x:Name="testlist" HorizontalAlignment="Left" Height="102" Margin="26,194,0,0" VerticalAlignment="Top" Width="551"/>
    </Grid>
</Window>